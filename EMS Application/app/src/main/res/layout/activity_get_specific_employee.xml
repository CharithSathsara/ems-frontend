<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_color"
    tools:context=".GetSpecificEmployee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnGetSpecificEmployeeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:src="@drawable/back_arrow" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:text="Charith's Account"
                android:fontFamily="@font/bangers"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:textStyle="bold" />



                <RelativeLayout
                    android:id="@+id/layoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAccountName"
                    android:layout_margin="7dp"

                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/imgEmp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/sp_employee_icon"
                        app:tint="@color/cardview_dark_background" />

                    <TextView
                        android:id="@+id/txtEmpName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgEmp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:text="Employee Name"
                        android:fontFamily="@font/berkshire_swash"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtEmpSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtEmpName"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:fontFamily="@font/berkshire_swash"
                        android:text="Employee Salary"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtEmpPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtEmpSalary"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/berkshire_swash"
                        android:padding="7dp"
                        android:text="Employee Phone number"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            <Button
                android:id="@+id/btnMarkAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutDetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bg"
                android:elevation="7dp"
                android:fontFamily="monospace"
                android:text="MARK ATTENDANCE"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="screen" />

            <Button
                android:id="@+id/btnPayNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnMarkAttendance"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/btn_bg"
                android:elevation="7dp"
                android:fontFamily="monospace"
                android:text="PAY NOW"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="screen" />

            <Button
                android:id="@+id/btnGetDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPayNow"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/btn_bg"
                android:elevation="7dp"
                android:fontFamily="monospace"
                android:text="GET DETAILS"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="screen" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>